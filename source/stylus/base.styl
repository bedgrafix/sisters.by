// html.b-title
html
	height 100%
	font-size $rootFontSize, false
	user-select auto

body
	font-family AvenirNextCyr, sans-serif
	background-color #f2f2f2
	min-height 100%
	position relative
	-webkit-text-size-adjust 100%
	-webkit-font-size-adjust 100%
	display table
	table-layout fixed
	width 100%
	height 100%
	padding-top 0
	@media $min_md
		padding-top 52px
	@media $320
		width 320px

img
	display block
	

.b-title-1, .b-title-2, .b-title-3
	display block
	font-weight 400
	margin-bottom 16px
	color #a5a5a5
	text-transform uppercase
	@media $min_md
		margin-bottom 30px
	&.black
		color #000
	&.marg-lg
		margin-bottom 36px
		@media $min_md
			margin-bottom 30px
	&.link
		color #00519e
		text-decoration none
		display inline-block
	&.pdn-top
		padding-top 38px
		@media $min_md
			padding-top 30px
	&.marg-xs
		margin-bottom 14px
		@media $min_md
			margin-bottom 14px
	&.desk-mid
		@media $min_md
			text-align center
	
.b-title-1
	font-size 20px
	
.b-title-2
	font-size 15px
	
.b-title-3
	font-size 14px

h1, h2, h3, h4, h5
	font-weight 400
	margin-bottom 16px
	color #a5a5a5
	text-transform uppercase
	@media $min_md
		margin-bottom 32px

h1
	font-size 20px
h2
	font-size 15px
h3
	font-size 14px
h4
	font-size 13px
h5
	font-size 12px

p
	font-size 14px
	line-height 16px
	// margin-bottom 18px
	margin-bottom 30px
	&:last-child
		margin-bottom 0

ul, ol
	margin-bottom 20px
	list-style-position inside
	li
		margin-bottom 10px

ul
	list-style none

table
	width 100%
	border 1px solid #d3d3d3
	border-collapse separate
	overflow hidden
	margin 27px 0
	table-laylout fixed
	th, td
		padding 14px 20px
		border-bottom 1px solid #d3d3d3
		border-right 1px solid #d3d3d3
		line-height 20px
		font-size 14px
		vertical-align top
		&:last-child
			border-right 0
	th
		font-weight 500
		font-size 16px
		background-color #ebebeb
		text-align left
		color #242424
		&.small
			width 580px
	tr
		&:last-child
			td, td
				border-bottom 0

i
	font-style italic

b, strong
	font-weight 600

button
	border 0

a
	cursor pointer
	color $blue
	text-decoration none

._no-border, ._no-border *
	border 0

._img-left,
._img-right
	margin-bottom 14px

._img-left
	float left
	margin-right 30px

._img-right
	float right
	margin-left 30px

._text-center
	text-align center

._text
	> p
		&:last-child
			margin-bottom 0

.fancybox-skin
	box-shadow none !important
	border-radius 0

.fancybox-wrap
	opacity 0

.owl-carousel .owl-item
	-webkit-transform translateZ(0)

.swiper-container
	.swiper-prev, .swiper-next
		vAlign()
	.swiper-prev
		left 0
	.swiper-next
		right 0

.-hidden-lg
	@media $max_lg
		display none
.-hidden-md
	@media $max_md
		display none
.-hidden-sm
	@media $max_sm
		display none
.-hidden-xs
	@media $max_xs
		display none

.-visible-lg
	display none
	@media $max_lg
		display block
.-visible-md
	@media $max_md
		display block
	@media $min_lg
		display none
.-visible-sm
	@media $max_sm
		display block
	@media $min_md
		display none
.-visible-xs
	@media $max_xs
		display block
	@media $max_sm
		display none
